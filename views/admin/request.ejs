	<%- include('../includes/admin-navigation.ejs') %>
	<main>
		<div class="main-container">
			<div class="cards">					
				<% if (req.length > 0) { %>
					<p class="title boldCap">List of request</p>
					<% for (let request of req) { %>
					
					<div class="card">
						<div class="card-header boldCap">
							<%= request.req_type%>
						</div>
						<div class="card-body">
							<h5 class="card-title caps"><%= request.first_name %> <%= request.sir_name %></h5>
							<h3 class="card-textcaps caps"><%= request.mineral_name %></h3>
							<p class="card-text"><%= request.description  %></p>
							<a href="/request/<%= request.id %>" class="btn btn-primary">RESPONDE</a>
						</div>
					</div>
					<p></p>
					<% } %>
				<% } else { %>
					<p>No new request</p>
				<% } %>
			</div>
		</div>
	</main>
